#!/bin/bash
set -eu

timestamp=$(date +%s)

selected_deployment="$( bosh deployments --json | jq ".Tables | .[0] | .Rows | .[] | .name" -r | gum choose)"

bosh manifest -d "$selected_deployment" > "$timestamp.$selected_deployment.yml"

gum log --structured --level info "Manifest saved to $timestamp.$selected_deployment.yml"
