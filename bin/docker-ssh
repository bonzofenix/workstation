#!/bin/bash

set -eu

###
# @description Pushes a docker image tagged to the private registry
#
# @arg $1 The image name ORG/NAME
#
# @stdout Prints information about what the script is doing
##


function docker-ssh() {
  containers=$(docker ps --format "{{.ID}}\t{{.Image}}" | tail -n +1)
  container=$(echo "$containers" |  gum choose )
  id=$(echo "$container" | cut -f1)
  docker exec -it "$id" /bin/bash
}

docker-ssh "${@:-}"
exit $?

